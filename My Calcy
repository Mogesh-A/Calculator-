      </div>
      <button class="jo" onclick="cleardis()">AC</button>
      <button class="jo" onclick="del()">C</button>
      <button class="jo" onclick="dis('^')">^</button>
      <button class="jo" onclick="dis('*')">*</button>
      <button class="jo" onclick="dis(7)">7</button>
      <button class="jo" onclick="dis(8)">8</button>
      <button class="jo" onclick="dis(9)">9</button>
      <button class="jo" onclick="dis('+')">+</button>
      <button class="jo" onclick="dis(4)">4</button>
      <button class="jo" onclick="dis(5)">5</button>
      <button class="jo" onclick="dis(6)">6</button>
      <button class="jo" onclick="dis('-')">-</button>
      <button class="jo" onclick="dis(1)">1</button>
      <button class="jo" onclick="dis(2)">2</button>
      <button class="jo" onclick="dis(3)">3</button>
      <button class="jo" onclick="dis('/')">/</button>
      <button class="jo" onclick="dis(0)">0</button>
      <button class="jo" onclick="dis('.')">.</button>
      <button class="jo" onclick="dij()" style="width: 210px; border-radius: 40px;" >=</button>
    </div>
    <script>
      let re = document.getElementById("resul");
      function dis(num) {
        re.value += num;
      }
      function cleardis() {
        re.value = "";
      }
      function del() {
        re.value = re.value.slice(0, -1);
      }
      function dij() {
        try {
          re.value = eval(re.value.replace(/\^/g, "**"));
        } catch (err) {
          alert("Invalid Input");
          re.value = "";
        }
      }
    </script>
